
# -------------------------
# Entorno y servidor
# -------------------------
NODE_ENV=development
PORT=4000

# -------------------------
# Base de datos (Postgres)
# -------------------------
# Formato: postgres://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=postgres://db_user:db_password@localhost:5432/creditcare_dev

# -------------------------
# Autenticación JWT
# -------------------------
# Cambia por secretos largos y seguros
JWT_SECRET=replace_with_a_strong_jwt_secret
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=replace_with_a_strong_refresh_secret
JWT_REFRESH_EXPIRES_IN=7d

# -------------------------
# Email / SMTP (para notificaciones)
# -------------------------
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
EMAIL_FROM="CreditCare <no-reply@example.com>"

# -------------------------
# Frontend
# -------------------------
FRONTEND_URL=http://localhost:3000

# -------------------------
# Worker / Queue (opcional)
# -------------------------
# Redis para colas y tareas asíncronas
REDIS_URL=redis://localhost:6379

# -------------------------
# Observabilidad y errores
# -------------------------
# Dejar vacío si no se usa en local
SENTRY_DSN=

# -------------------------
# Configuración de la app
# -------------------------
DEFAULT_TIMEZONE=America/Mexico_City
DEFAULT_CURRENCY=MXN

# -------------------------
# Opciones de seguridad y límites
# -------------------------
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# -------------------------
# Variables opcionales para integración externa
# -------------------------
# (por ejemplo, proveedor de autenticación, tokenización, etc.)
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=
THIRD_PARTY_TOKENIZATION_API_KEY=

# Environment files
.env
.env.local
.env.*.local
